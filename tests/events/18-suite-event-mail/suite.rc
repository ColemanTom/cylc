#!jinja2

title=Suite Event Mail

[cylc]
    [[events]]
{% if GLOBALCFG is not defined %}
        mail events = startup, shutdown
        mail footer = see: http://localhost/stuff/%(owner)s/%(suite)s/
        mail smtp = {{MAIL_SMTP}}
{% endif %}{# not GLOBALCFG is not defined #}
    [[reference test]]
        live mode suite timeout=PT1M

[scheduling]
    [[dependencies]]
        graph=t1

[runtime]
    [[t1]]
        script=true
